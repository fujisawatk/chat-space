.side-bar
  .header
    .header__top
      .header__top__info
        %h1.header__top__info__name
          = current_user.name
        .header__top__info__btn
          = link_to new_group_path, class: "header__top__info__btn header__top__info__btn--edit" do
            = fa_icon 'edit', class: "header__btn--icon"
          = link_to edit_user_path(current_user), class: "header__top__info__btn header__top__info__btn--cog" do
            = fa_icon 'cog', class: "header__btn--icon"
    .header__left
      %ul.header__left__ul
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            %li.header__left__ul__li
              .header__left__ul__li--sample
                = group.group_name
              .header__left__ul__li--text
                = group.show_last_message
