%li.contents__main__ul__li{ "data-message_id": "#{message.id}" }
  .contents__main__ul__li--up
    .contents__main__ul__li--up--name
      = message.user.name
    .contents__main__ul__li--up--date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .contents__main__ul__li--down
    - if message.text.present?
      .contents__main__ul__li--down--messages
        = message.text
    = image_tag message.image.url, class: 'contents__main__ul__li--messages--image' if message.image.present?
  
